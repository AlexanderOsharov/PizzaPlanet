<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/pizza_name_details"
        style="@style/PizzaNameTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp" />


    <ImageView
        android:id="@+id/pizza_image_details"
        style="@style/PizzaImageStyle"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="1"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/pizza_composition_details"
        style="@style/PizzaCompositionTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pizza_venue_price_details"
        style="@style/PizzaPriceTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/close_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@android:drawable/ic_menu_close_clear_cancel" />

</LinearLayout>
