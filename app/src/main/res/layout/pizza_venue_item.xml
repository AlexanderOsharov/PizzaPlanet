<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp">

    <ImageView
        android:id="@+id/pizza_image"
        style="@style/PizzaImageStyle"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/pizza_name"
        style="@style/PizzaNameTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/pizza_image"
        android:layout_alignTop="@id/pizza_image"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/pizza_composition"
        style="@style/PizzaCompositionTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/pizza_image"
        android:layout_below="@id/pizza_name"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/pizza_venue_price"
        style="@style/PizzaPriceTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pizza_composition"
        android:layout_toEndOf="@id/pizza_image"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>

    <ImageButton
        android:id="@+id/basket"
        style="@style/PizzaBasketImageButtonStyle"
        android:layout_alignBaseline="@id/pizza_composition"
        android:layout_alignBottom="@id/pizza_composition"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"/>

</RelativeLayout>